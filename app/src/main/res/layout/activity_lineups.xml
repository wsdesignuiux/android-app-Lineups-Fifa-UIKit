<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Lineups">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/mask_group_6">

                <include layout="@layout/toolbar" />


                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="50dp"
                    android:text="Group C"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <customfonts.MyTextView_Roboto_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="40dp"
                        android:text="Japan"
                        android:textColor="#ffffff"
                        android:textSize="12.7sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="15dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_japan" />

                    <customfonts.MyTextView_Roboto_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0 - 0 "
                        android:textColor="#ffffff"
                        android:textSize="13.7sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="15dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_france" />


                    <customfonts.MyTextView_Roboto_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingRight="50dp"
                        android:text="France"
                        android:textColor="#ffffff"
                        android:textSize="12.7sp" />


                </LinearLayout>

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:text="Moscow, Luzhniki Stadium"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />


            </FrameLayout>

            <LinearLayout
                android:id="@+id/lll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="horizontal">


                <customfonts.MyTextView_Roboto_Medium
                    android:id="@+id/txt_near_by_you"
                    android:layout_width="132dp"
                    android:layout_height="38dp"
                    android:background="@drawable/left_half_fill_mustered_rect"
                    android:gravity="center"
                    android:text="Japan" />

                <customfonts.MyTextView_Roboto_Medium
                    android:id="@+id/txt_toprated"
                    android:layout_width="132dp"
                    android:layout_height="38dp"
                    android:background="@drawable/right_half_mustered_rect"
                    android:gravity="center"
                    android:text="France" />

            </LinearLayout>


            <FrameLayout
                android:id="@+id/fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </FrameLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_group_23" />

            <customfonts.MyTextView_Roboto_Medium
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Events"
                android:textColor="#cbcfdd"
                android:textSize="8.9sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/group_271" />

            <customfonts.MyTextView_Roboto_Medium
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Events"
                android:textColor="#cbcfdd"
                android:textSize="8.9sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_football_court_top_view" />

            <customfonts.MyTextView_Roboto_Medium
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Events"
                android:textColor="#cbcfdd"
                android:textSize="8.9sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/stadium1" />

            <customfonts.MyTextView_Roboto_Medium
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Events"
                android:textColor="#cbcfdd"
                android:textSize="8.9sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/group_261" />

            <customfonts.MyTextView_Roboto_Medium
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Events"
                android:textColor="#cbcfdd"
                android:textSize="8.9sp" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>